<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/rl_xxx_item_content"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_xxx_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ITEM"
            android:textColor="@color/font_info"
            android:textSize="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/font_info" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_xxx_item_menu"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_xxx_item_menu1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/font_info"
            android:gravity="center"
            android:text="置顶"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_xxx_item_menu2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/orange"
            android:gravity="center"
            android:text="标记已读"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_xxx_item_menu3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:text="删除"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>